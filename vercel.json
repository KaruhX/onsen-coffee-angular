{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "frontend/dist/frontend/browser"
      }
    },
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    },
    {
      "src": "admin/app.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/admin/(.*)",
      "dest": "admin/app.py"
    },
    {
      "src": "/admin",
      "dest": "admin/app.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/static/(.*)",
      "dest": "api/index.py"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
